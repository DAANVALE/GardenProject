<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/background_inicio"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_margin="20dp"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom|center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp">
            <ImageView
                android:layout_width="123dp"
                android:layout_height="100dp"
                android:src="@drawable/podadora"
                android:layout_gravity="bottom"
                android:layout_marginRight="20dp"
                />
            <ImageView
                android:layout_width="125dp"
                android:layout_height="214dp"
                android:src="@drawable/dibujojardinero"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <Button
            android:onClick="BtnJardinero"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Jardinero"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/boton1"
            android:layout_marginHorizontal="80px"/>
        <Button
            android:onClick="BtnCliente"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:layout_marginBottom="40dp"
            android:text="Cliente"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/boton1"
            android:layout_marginHorizontal="80px"/>
    </LinearLayout>
</LinearLayout>