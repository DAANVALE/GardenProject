<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.service.ServiceFragment_JardineroTwo"
    android:background="#B5DFDA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp">

            <com.google.android.gms.maps.MapView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map"/>
        </FrameLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alcazár de San Juan 1337"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Día: 25/05/2021"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="22dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Horario: 16:20"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podado de césped 50m²"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20dp"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Corte de arbusto 6"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20dp"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plantar palmera 2"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20dp"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retirar césped 4m²"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/comenzarjardinero"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="comenzar"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/terminarjardinero"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Acabar"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton1"/>

    </LinearLayout>

</ScrollView>